{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "**/*.spec.ts"
    ]
}